#define TAMVET 10
#include <stdio.h>
int buscaBin(int v[], int n, int chave){
	//Retorna -1 se a chave nao foi encontrada
	//no vetor, ou o indice onde a chave foi
	//encontrada
	int meio, inicio=0, fim=n-1;
	while (inicio <=fim) {
    meio=(fim+inicio)/2;
		if (chave==v[meio]) {
			return(meio);
		}
		if (chave>v[meio]) {
				inicio=meio+1;
		}
		else{
				fim=meio-1;
		}
	}
	return(-1);
}

int main(){
	int vet[TAMVET];
	int i, chave, posChave;
	printf("Digite os %d elementos do vetor\n",TAMVET);
	for (i=0; i<TAMVET; i++) {
    scanf("%d", &vet[i]);
	}
	printf("Digite o valor da chave de pesquisa\n");
	scanf("%d", &chave);
	posChave=buscaBin(vet, TAMVET,chave);
	if (posChave<0) {
    printf("A chave de pesquisa nao esta no vetor\n");
	}
	else{
		printf("A chave de pesquisa foi encontrada na posicao: %d\n", posChave+1);
	}
}
