 #include<stdio.h>
 typedef struct{
     float codigo;
     float preco;
     float quantidade;
     float valortotal;
     float estoque;
     int indmaior;
 }Produto;
 
 //inicia dados
 void inicia(Produto *produto, int casos){
     for(int i=0;i<casos;i++){
         produto[i].codigo=0;
         produto[i].preco=0;
         produto[i].quantidade=0;
         produto[i].valortotal=0;
         produto[i].indmaior=0;
         produto[i].estoque=0;
     }
 }
 
 //cadastra produto 
 void cadastraproduto(Produto *produto, int casos){
     for(int i=0;i<casos;i++){
         scanf("%f %f %f", &produto[i].codigo, &produto[i].preco, &produto[i].quantidade);
     }
 }
 
 //calcula valor valortotal
 void valortotal(Produto *produto, int casos){
     for(int i=0;i<casos; i++){
         produto[i].valortotal= produto[i].preco*produto[i].quantidade;
         produto[0].estoque+=produto[i].valortotal;
         if(produto[produto[0].indmaior].valortotal<produto[i].valortotal){
             produto[0].indmaior = i;
         }
     }
 }
 
//imprime 
void imprime (Produto *produto, int casos){
    printf("\n");
    for(int i=0;i<casos;i++){
        printf("%.0f %.2f\n", produto[i].codigo, produto[i].valortotal);
    }
    printf("%.2f\n%.0f\n", produto[0].estoque, produto[produto[0].indmaior].codigo);
}

int main(){
    int casos;
    
    scanf("%i", &casos);
    
    Produto produto[casos];
    inicia(produto,casos);
    cadastraproduto(produto, casos);
    valortotal(produto,casos);
    imprime(produto,casos);
}
