#include<stdio.h>

int busca(int v[], int n, int chave){
	int i;
	for (i=0; i<n; i++) {
		if(chave==v[i]){//busca o vetor que corresponda Ã  chave;
			return(i);
		}
	}
	return(-1);
}

int main(){
	int vet[5];
	int indice,i, chave;
	//Ler o vetor
	printf("Digite 5 valores para ocuparem o vetor:\n");
	for (i=0;i<5; i++) {
		scanf("%d", &vet[i]);
	}
	//Ler a chave de pesquisa
    printf("Agora digite qual valor quer procurar:\n");
	scanf("%d", &chave);
	indice=busca(vet, 5, chave);
	if (indice==-1) {
    printf("Valor %d nao encontrado no vetor\n", chave);
	}
	else{
		printf("Valor %d encontrado no vetor na posicao %d\n", chave, indice+1);
	}
	return(0);
}
